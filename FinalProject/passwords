name = "Sigurd"
last_name = "Brinch"
loggin = "sigurdkb"


def cobinasion(name):
    chrs = name
    n = 8
    teller = 0
    for xs in itertools.product(chrs, repeat=n):
        teller += 1
        print(''.join(xs))
        #print(teller)


def password_crack(real):
    start = dt.datetime.now()
    chars = string.ascii_lowercase + string.ascii_uppercase + string.digits
    attempts = 0
    for password_length in range(8):
        for guess in itertools.product(chars, repeat=password_length):
            attempts += 1
            guess = ''.join(guess)
            print(guess)
            if guess == real:
                end = dt.datetime.now()
                time = end - start
                return 'password is {}. found in {} guesses. And took the following time {}'.format(guess, attempts, time)


def encrypt(text, s):
    result = ""

    # transverse the text
    for i in range(len(text)):
        char = text[i]
        # Encrypt uppercase characters

        if (char.isupper()):
            result += chr((ord(char) + s - 65) % 26 + 65)
        # Encrypt lowercase characters
        else:
            result += chr((ord(char) + s - 97) % 26 + 97)
    return result
        #print(result)

"""
here is the methods to include in the word list.
"""
try:
    outputFile = open("wordlist.txt", "w") # lager en ny fil kalt myOutFile
except Exception as e:
    print(e)


rev_name = name[::-1]
rev_last = last_name[::-1]
rev_loggin = loggin[::-1]
outputFile.write(rev_name)
outputFile.write("\n")
outputFile.write(rev_last)
outputFile.write("\n")
outputFile.write(rev_loggin)
outputFile.write("\n")
signs = string.punctuation
lenght = 2
for add in itertools.product(signs, repeat=lenght):
    count = name + ''.join(add)
    #print(count)
    outputFile.write(count)
    outputFile.write("\n")

#Select how to encrypt the text. -3 is backwords
s = -3
for x in words:
    #print(encrypt(x, s))
    outputFile.write(x)
    outputFile.write("\n")

